<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card card-sets">
        <div class="card-body">
          <h3 class="card-titles">投稿編集画面（管理者）</h3>
          <% if @post.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <strong>入力内容にエラーがあります</strong>
              <ul>
                <% @post.errors.each do |attr, msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= form_with model: @post, url: admin_post_path(@post), method: :patch, local: true do |f| %>
            <div class="form-group">
              <%= f.label :投稿画像 %><br>
              <%= f.attachment_field :image %>
            </div>
            <div class="form-group">
              <%= f.label :タイトル %>
              <%= f.text_field :title, autofocus: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :内容 %>
              <%= f.text_area :body, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :場所 %>
              <%= f.text_field :location, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.radio_button :category, "おすすめスポット" %>おすすめスポット
              <%= f.radio_button :category, "空き家情報" %>空き家情報
            </div>
              <%= f.submit "編集する", class: "btn btn-success w-100 card-btn" %>
              <%= link_to "削除する", admin_post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger delete-btn" %>
          <% end %>
        </div>
      </div>
      <%= link_to :back do %>
        <button>前ページへ戻る</button>
      <% end %>
    </div>
  </div>
</div>
