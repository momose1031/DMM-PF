<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card card-sets">
        <div class="card-body">
          <h3 class="card-titles">新規投稿</h3>
          <% if @post.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <strong>入力内容にエラーがあります</strong>
              <ul>
                <% @post.errors.each do |attr, msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= form_with model: @post, local:true do |f| %>
            <div class="form-group">
              <%= f.label :投稿画像 %><br>
              <%= f.attachment_field :post_images_images, multiple: true %>
            </div>
            <div class="form-group">
              <%= f.label :タイトル %>
              <%= f.text_field :title, autofocus: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :内容 %>
              <%= f.text_area :body, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :場所 %>
              <%= f.text_field :location, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.radio_button :category, "おすすめスポット", checked: "checked" %>おすすめスポット
              <% if current_customer.country == 0 %>
                <%= f.radio_button :category, "空き家情報" %>空き家情報
              <% end %>
            </div>
              <%= f.submit "投稿する", class: "btn btn-info w-100 card-btn" %>
          <% end %>
        </div>
      </div>
      <%= link_to :back do %>
        <button class="back-btn">前ページへ戻る</button>
      <% end %>
    </div>
  </div>
</div>