<div class="row text-center pt-5">
  <div class="col-sm-8">
    <h2>おすすめスポット一覧</h2>
  </div>
  <div class="col-sm-4">
    <p>検索窓を設置</p>
  </div>
</div>

<div class="card-deck p-5">
  <div class="row">
    <% @posts.each do |post| %>
      <% if post.category == "おすすめスポット" %>
        <div class="col-sm-4 mt-5">
          <div class="card bg-light pt-3">
            <%= link_to post_path(post), class: "mx-auto" do %>
              <%= attachment_image_tag post, :image, class: "rounded-circle" %>
            <% end %>
            <div class="card-body text-center">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text">
                投稿者：<%= post.customer.name %>
              </p>
              <p class="card-text">
                場所：<%= post.location %>
              </p>
              <p><%= post.favorites.count %>いいね</p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<p><%= link_to "新規投稿する", new_post_path %></p>
