<div class="row text-center m-5">
  <div class="col text-center">
    <h2>投稿編集画面</h2>
  </div>
</div>
<div class="row justify-content-start">
  <div class="col-md-10 offset-1 text-center">
    <%= form_with model: @post, url: post_path(@post), method: :patch, local: true do |f| %>
      <div class="form-group">
        <%= f.label :image, "投稿画像", class: "label" %>
        <%= f.attachment_field :image, class: "input" %>
      </div>
      <div class="form-group">
        <%= f.label :title, "タイトル", class: "label" %>
        <%= f.text_field :title, autofocus: true, size: "40x20" %>
      </div>
      <div class="form-group">
        <%= f.label :body, "内容", class: "label" %>
        <%= f.text_field :body, size: "40x20" %>
      </div>
      <div class="form-group">
        <%= f.label :location, "場所", class: "label" %>
        <%= f.text_field :location, size: "40x20" %>
      </div>
      <div class="form-group">
        <%= f.label :category, "分類", class: "label" %>
        <%= f.radio_button :category, "おすすめスポット", class: "input" %>おすすめスポッット
        <% if current_customer.country == 0 %>
          <%= f.radio_button :category, "空き家情報", class: "input" %>空き家情報
        <% end %>
      </div>
      <div class="form-group">
        <%= f.submit "更新する", class:"btn btn-secondary" %>
      </div>
      <%= link_to :back do %>
        <button>戻る</button>
      <% end %>
    <% end %>
  </div>
</div>
